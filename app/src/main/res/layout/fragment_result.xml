<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/resultTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hasil_analisis"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <!-- ImageView untuk preview gambar -->
    <ImageView
        android:id="@+id/result_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:contentDescription="@string/result_image_description"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_place_holder"
        tools:ignore="ImageContrastCheck" />

    <!-- ImageView untuk hasil analisis -->
    <ImageView
        android:id="@+id/resultImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:contentDescription="@string/result_image_preview"
        android:visibility="gone"/>  <!-- Gambar hasil analisis, disembunyikan secara default -->

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil Analisis Akan Ditampilkan di Sini"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="16dp"/>

    <Button
        android:id="@+id/btnAnalyzeAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/analisis_lagi"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnBackToHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kembali_ke_beranda"
        android:layout_marginTop="8dp"/>

</LinearLayout>
