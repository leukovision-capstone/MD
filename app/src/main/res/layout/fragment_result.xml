<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dicoding.capstone.leukovision.ui.result.ResultFragment">

    <!-- TextView -->
    <TextView
        android:id="@+id/text_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="8dp"
        android:text="@string/hasil_gambar_validasi"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ImageView -->
    <ImageView
        android:id="@+id/image_scan"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_analisis_sel_leukimia"
        android:contentDescription="@string/gambar_scan" />

    <!-- Button Analisis -->
    <Button
        android:id="@+id/button_analisis_sel_leukimia"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/analisis_sel_leukimia"
        app:layout_constraintBottom_toTopOf="@+id/button_save_hasil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Button Save Hasil -->
    <Button
        android:id="@+id/button_save_hasil"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="25dp"
        android:text="@string/save_hasil"
        app:layout_constraintBottom_toTopOf="@+id/button_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Button Back -->

    <!-- Button Scan New -->

    <Button
        android:id="@+id/button_back"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="100dp"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_scan_new"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_scan_new"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="100dp"
        android:text="@string/scan_new"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_back" />

</androidx.constraintlayout.widget.ConstraintLayout>
