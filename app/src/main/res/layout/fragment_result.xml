<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/black" />

    <!-- Judul Hasil Analisis -->
    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil Analisis"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Gambar Hasil Analisis -->
    <ImageView
        android:id="@+id/result_image_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_result" />

    <!-- Keterangan Hasil -->
    <TextView
        android:id="@+id/analysis_result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keterangan: Hasil analisis akan ditampilkan di sini."
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- Tombol Deteksi Sel -->
    <Button
        android:id="@+id/btn_detect_cells"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deteksi Sel"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>
</LinearLayout>